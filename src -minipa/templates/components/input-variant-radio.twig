<div class="d-md-flex {% if spacing %} {{ spacing }}{% endif %}">
    {% for control in formControls %}    
        <div class="form-check mb-1 mr-5">
            <input class="form-check-input" type="radio" name="{{ name }}" value="{{ control.value }}" id="{{ name }}{{ loop.index }}"{% if vModel %} v-model="{{ vModel }}"{% endif %} {{control.checked}}>
            <label class="form-check-label" for="{{ name }}{{ loop.index }}">{{ control.value }}</label>
        </div>
    {% endfor %}
</div>
